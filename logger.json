{
  "providerName": "OpinionFrontUI",
  "globalLevel": "DEBUG",
  "appenders": [
    {
      "name": "console",
      "enabled": true,
      "level": "DEBUG",
      "format": "{timestamp} [{level}] {logger}: {message}",
      "channel": {
        "type": "console"
      },
      "groups": [".+"]
    },
    {
      "name": "messages",
      "enabled": true,
      "level": "TRACE",
      "channel": {
        "type": "async-consumer",
        "channelName": "messages"
      },
      "groups": [".+"]
    },
    {
      "name": "errors",
      "enabled": true,
      "level": "ERROR",
      "channel": {
        "type": "async-consumer",
        "channelName": "error-tracking"
      },
      "groups": [".*Service$", ".*Controller$"]
    }
  ]
}
